                    <script>
                        document.getElementById("showcovid").innerHTML = covid();

                        function covid() {
                            var url = 'https://covid19.th-stat.com/api/open/cases';
                            fetch(url)
                                .then((r) => r.json())
                                .then(function(data) {
                                    var x = 0; //จำนวนผู้ป่วย
                                    var y = 0; //หายแล้ว
                                    var z = 0; //กำลังรักษา
                                    for (i = 0; i < data.Data.length; i++) {
                                        if (data.Data[i].ProvinceId == 60) {
                                            //https://www.govesite.com/uploads/20150616220039Pp9UPrr/20180720112427_3_hDHa8tk.pdf อันนี้ลำดีบจังหวัด
                                            //ลำดับที่34คือจังหวัด
                                            x++;
                                            if (data.Data[i].StatQuarantine == 0) {
                                                y++;
                                            } else z++;
                                        }
                                    }
                                    $('#showcovid').html("<h6>จำนวนผู้ป่วยทั้งหมดในจังหวัดสมุทรปราการ : " + x + " คน</h6>" +
                                        "<h6>รักษาหายแล้วจำนวน : " + y + " คน</h6>" +
                                        "<h6>กำลังรักษาจำนวน : " + z + " คน</h6>");
                                });
                        };
                    </script>

